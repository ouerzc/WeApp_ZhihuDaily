/**index.wxss**/
page {
  background-color: #f5f5f5
}

page swiper {
  height: 360rpx;
}

.slide-image {
  width: 100%;
  height:360rpx;
}

.title-view{
    position:absolute;
    top:0px;
    width:100%;
    height: 100%;
    background: linear-gradient(to bottom, rgba(0,0,0,0) 25%,rgba(0,0,0,0.6) 100%);
}

.title-text{
    color:#FFF;
    bottom: 20rpx;
    position: absolute;
    margin: 40rpx;
}

.daily-date {
  margin: 20rpx;
  font-size: 24rpx;
}

.item {
  display: flex;
  padding: 20rpx 40rpx;
  border-bottom: 1rpx solid #eee;
  cursor: pointer;
  background-color: #fff;
  margin: 6rpx; 
  border-radius:15rpx;
}

.item .item-img-view {
  width: 20%;
  height: 128rpx;
  margin-right: 2rpx;
}

.item .item-img {
  width: 128rpx;
  height: 128rpx;
  margin-right: 2rpx;
}

.item .item-title-view {
  height: 128rpx;
  margin-left: 8rpx;
  text-align:center;
  vertical-align: middle;
  width: 80%;
}

.item .item-title {
  height: 100%;
  margin: auto;
}
